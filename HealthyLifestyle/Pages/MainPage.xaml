<Page x:Class="HealthyLifestyle.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HealthyLifestyle.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Name="ButtonExe" Click="ButtonExe_Click" >Выход</Button>
            <Button Name="ButtonRecipes" Click="ButtonRecipes_Click">Рецепты</Button>
            <Button Name="ButtonDiary" Click="ButtonDiary_Click">Дневник</Button>
            <Button Name="ButtonFavourites" Click="ButtonFavourites_Click">Избранное</Button>
            <Button Name="ButtonCounter" Click="ButtonCounter_Click">Счетчик</Button>
            <Button Name="BButtonPersonalAccount" Click="BButtonPersonalAccount_Click">Личный кабинет</Button>
        </StackPanel>

        <Frame Grid.Row="1" Name="FrameMain">
          
        </Frame>

    </Grid>
</Page>
