<Page x:Class="HealthyLifestyle.Pages.HomePageWithCalories"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HealthyLifestyle.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePageWithCalories">

    <Grid>
        <StackPanel>
            <TextBlock  FontSize="25"  >Вы съели</TextBlock>
            <Border Padding="10" CornerRadius="20" BorderThickness="1" BorderBrush="#FF76E383" Background="{Binding brush}">
                <TextBlock  FontSize="25" Name="CaloriesDay" ></TextBlock>
            </Border>
                
            <TextBlock  FontSize="25"  >из</TextBlock>
            <TextBlock  FontSize="25" Name="TextBlockCalories" ></TextBlock>
            <TextBlock Name="HintText" Visibility="Collapsed"></TextBlock>
        </StackPanel>
       
    </Grid>
</Page>
